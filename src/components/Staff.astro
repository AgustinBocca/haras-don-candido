---
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const staffMembers = [
  {
    name: 'Luis Grimaldi',
    description: [i18n.Staff.DESCRIPTION_1, i18n.Staff.SUB_DESCRIPTION_1],
    photo: '/images/Staff/Luis-Grimaldi.jpg'
  },
  {
    name: 'Emilia Grimaldi',
    description: [i18n.Staff.DESCRIPTION_2, i18n.Staff.SUB_DESCRIPCION_2],
    photo: '/images/Staff/Emilia-Grimaldi.jpg'
  },
  {
    name: 'Bárbara Dutruel',
    description: [i18n.Staff.DESCRIPTION_3, i18n.Staff.SUB_DESCRIPTION_3],
    photo: '/images/Staff/Barbara-Dutruel.jpg'
  },
  {
    name: 'Damian Ancic',
    description: [i18n.Staff.DESCRIPTION_4, i18n.Staff.SUB_DESCRIPCION_4],
    photo: '/images/Staff/Damian-Ancic.jpg'
  },
  {
    name: 'Javier Rizzo',
    description: [i18n.Staff.DESCRIPTION_4],
    photo: '/images/Staff/Javier-Rizzo.jpg'
  },
  {
    name: 'Daniel Meubry',
    description: [i18n.Staff.DESCRIPTION_5],
    photo: '/images/Staff/Daniel-Meubry.jpg'
  },
  {
    name: 'Sergio Cisterna',
    description: [i18n.Staff.DESCRIPTION_6],
    photo: '/images/Staff/Sergio-Cisterna.jpg'
  }
];
---

<style>
  #staff {
    scroll-margin-top: 100px;
  }

  @media (max-width: 640px) {
    .staff-member {
      margin: 0 10px; /* Agrega margen para dispositivos móviles */
    }
  }
</style>

<!-- Slogan -->
<div class="relative z-20">
  <div class="bg-[#014618] text-white py-4 px-4 sm:px-6 md:px-6 lg:px-8 rounded-lg shadow-lg text-center max-w-3xl mx-auto -mt-12 transform translate-y-1/2">
    <h2 class="text-2xl sm:text-3xl md:text-3xl lg:text-4xl mb-1 font-light tracking-wide">
      {i18n.Slogan.TITLE_SLOGAN}
    </h2>
  </div>
</div>

<!-- Staff Section -->
<section id="staff" class="bg-slate-100 relative w-full py-10 bg-cover bg-center flex flex-col">
  <div class="container sm:px-10 mx-auto text-center flex flex-wrap justify-center gap-3 mt-8">
    <div class="flex flex-wrap justify-center gap-14 mt-12">
      {staffMembers.map((member) => (
        <div class="bg-white p-4 rounded-lg shadow-md text-center w-full sm:w-1/3 lg:w-1/5 flex flex-col items-center border-2 border-[#947F45] staff-member">
          <div class="w-24 h-24 mb-4 overflow-hidden">
            <div class="relative w-full h-full rounded-full overflow-hidden">
              <img src={member.photo} alt={member.name} class="w-full h-full object-cover" />
            </div>
          </div>
          <h3 class="text-xl font-semibold">{member.name}</h3>
          <div class="text-gray-600">
            {member.description.map((desc) => (
              <p>{desc}</p>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
