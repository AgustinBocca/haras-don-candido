<!-- Carrusel de imágenes -->
<section class="py-1 bg-[#947F45]">
    <div class="container mx-auto overflow-hidden relative">
      <div class="flex space-x-4 slider-container">
        <!-- Imágenes -->
        <div class="w-1/5">
          <img src="../../public/images/Sliders/Slider01.jpg" alt="Imagen" class="rounded-lg w-full h-auto max-h-48 object-cover">
        </div>
        <div class="w-1/5">
          <img src="../../public/images/Sliders/Slider02.jpg" alt="Imagen" class="rounded-lg w-full h-auto max-h-48 object-cover">
        </div>
        <div class="w-1/5">
          <img src="../../public/images/Sliders/Slider03.jpg" alt="Imagen" class="rounded-lg w-full h-auto max-h-48 object-cover">
        </div>
        <div class="w-1/5">
          <img src="../../public/images/Sliders/Slider04.jpg" alt="Imagen" class="rounded-lg w-full h-auto max-h-48 object-cover">
        </div>
        <div class="w-1/5">
          <img src="../../public/images/Sliders/Slider05.jpg" alt="Imagen" class="rounded-lg w-full h-auto max-h-48 object-cover">
        </div>
      </div>
    </div>
  </section>
  
  <style>
    .slider-container {
      display: flex;
      animation: slideLeft 60s linear infinite; /* 60s es el tiempo que tardará en completar el ciclo */
    }
  
    @keyframes slideLeft {
      0% {
        transform: translateX(0); /* Inicia desde la posición original */
      }
      100% {
        transform: translateX(-100%); /* Se desplaza hacia la izquierda */
      }
    }
  
  </style>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const sliderContainer = document.querySelector('.slider-container');
      if (sliderContainer) {
        const images = sliderContainer.querySelectorAll('img');
        
        // Clonar las imágenes y añadir al contenedor
        images.forEach(image => {
          const clone = image.cloneNode(true);
          sliderContainer.appendChild(clone);
        });
      }
    });
  </script>
  