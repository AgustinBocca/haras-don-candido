<style>
  .btn-brand-color {
    background-color: #ab994b;
  }

  .btn-brand-color:hover {
    background-color: #ab994b;
  }

  .background-navbar {
    background: linear-gradient(180deg,
        rgba(182, 142, 72, 0.589) 0%,
        rgba(204, 159, 82, 0.404) 41%,
        rgba(221, 172, 88, 0.02) 100%);
  }

  .scrolled-background {
    backdrop-filter: blur(10px);
    background-color: #9c925d57;
  }

  .scrolled-logo {
    background-color: #ab994b;
    padding: 5px;
    border-radius: 5px;
  }

  .scrolled-text {
    color: #3f380d;
  }

  /* Efecto hover subrayado */
  .navbar-button {
    position: relative;
    overflow: hidden;
  }

  .navbar-button::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background-color: transparent; /* Color de fondo del subrayado */
    transition: background-color 0.3s ease;
    transform: scaleX(0);
    transform-origin: left;
  }

  .navbar-button:hover::after {
    background-color: #ab994b; /* Color del subrayado al hacer hover */
    transform: scaleX(1);
  }

  /* Estilos para el menú desplegado en dispositivos móviles */
  @media (max-width: 767px) {
    #navbar-default {
      background-color: #ab994b;
      padding: 8px;
      border-radius: 10px;
    }

    .navbar-button {
      transition: background-color 0.3s ease;
      padding: 8px 12px;
      border-radius: 8px;
      margin-bottom: 4px;
      /* Añadir cambio de color de texto en dispositivos móviles */
      color: #fff; /* Color de texto por defecto */
    }

    .navbar-button.scrolled-text-mobile {
      color: #ab994b; /* Color de texto cambiado cuando se hace scroll */
    }

    .navbar-button:hover {
      background-color: rgba(0, 0, 0, 0.1);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const navbar = document.getElementById('navbar');
    const logo = document.getElementById('logo');
    const navbarButtons = document.querySelectorAll('.navbar-button');
    const menuToggle = document.getElementById('menu-toggle');
    const navbarDefault = document.getElementById('navbar-default');

    if (navbar && logo && menuToggle && navbarDefault) {
      window.addEventListener('scroll', function () {
        if (window.scrollY > 0) {
          navbar.classList.add('scrolled-background');
          navbar.classList.remove('bg-transparent');
          logo.classList.add('scrolled-logo');
          navbarButtons.forEach(button => {
            button.classList.add('scrolled-text');
          });
        } else {
          navbar.classList.remove('scrolled-background');
          navbar.classList.add('bg-transparent');
          logo.classList.remove('scrolled-logo');
          navbarButtons.forEach(button => {
            button.classList.remove('scrolled-text');
          });
        }
      });

      menuToggle.addEventListener('click', function () {
        navbarDefault.classList.toggle('hidden');
      });

      // Cerrar el menú al hacer clic en un enlace del menú en dispositivos móviles
      navbarDefault.querySelectorAll('a').forEach(function (link) {
        link.addEventListener('click', function () {
          navbarDefault.classList.add('hidden');
        });
      });
    }
  });
</script>
